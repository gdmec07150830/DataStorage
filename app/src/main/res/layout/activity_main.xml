<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cn.edu.gdmec.s07150830.datastorage.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="账号："/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edittext1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="密码："/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edittext2"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textview"/>
    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spRead"
        android:text="sharedPreferences写入"
        android:onClick="spWrite"
        android:layout_below="@+id/spWrite"
        android:layout_alignEnd="@+id/SDWirte" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spWrite"
        android:text="sharedPreferences读取"
        android:onClick="spRead"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ROM写入"
        android:id="@+id/romWrite"
        android:onClick="ROMWrite"
        android:layout_alignTop="@+id/romRead"
        android:layout_toEndOf="@+id/romRead" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ROM读取"
        android:id="@+id/romRead"
        android:onClick="ROMRead"
        android:layout_above="@+id/spWrite"
        android:layout_toEndOf="@+id/spWrite" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SD卡写入"
        android:id="@+id/SDWirte"
        android:onClick="SDWrite"
        android:layout_above="@+id/spWrite"
        android:layout_alignEnd="@+id/spWrite" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SD卡读取"
        android:id="@+id/SDRead"
        android:onClick="SDRead"
        android:layout_above="@+id/spWrite"
        android:layout_alignParentStart="true" />
</RelativeLayout>
